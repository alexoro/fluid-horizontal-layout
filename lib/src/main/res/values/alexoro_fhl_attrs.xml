<?xml version="1.0" encoding="utf-8"?>
<resources>

    <attr name="layout_gravity">
        <enum name="no_gravity" value="0x00" />
        <enum name="top" value="0x30" />
        <enum name="center_vertical" value="0x10" />
        <enum name="bottom" value="0x50" />
    </attr>

    <attr name="gravity">
        <enum name="left" value="0x03" />
        <enum name="right" value="0x05" />
    </attr>

    <declare-styleable name="FHL_FluidHorizontalLayout">
        <attr name="layout_isFluid" format="boolean" />
        <attr name="layout_gravity" />
        <attr name="gravity" />
    </declare-styleable>

</resources>